{
  "info": {
    "name": "CityAssist API",
    "description": "Complete API collection for CityAssist platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"John Doe\",\n  \"age\": 30,\n  \"medicalFlags\": [\"Asthma\"],\n  \"commutePatterns\": [\"Daily Commuter\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"accessToken\", jsonData.accessToken);",
                  "    pm.environment.set(\"refreshToken\", jsonData.refreshToken);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": {
              "raw": "{{baseUrl}}/api/auth/refresh?refreshToken={{refreshToken}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "refresh"],
              "query": [{"key": "refreshToken", "value": "{{refreshToken}}"}]
            }
          }
        }
      ]
    },
    {
      "name": "User Management",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": {
              "raw": "{{baseUrl}}/api/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "profile"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe Updated\",\n  \"age\": 31,\n  \"medicalFlags\": [\"Asthma\"],\n  \"commutePatterns\": [\"Daily Commuter\", \"Public Transit User\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "profile"]
            }
          }
        },
        {
          "name": "Update Preferences",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"notificationPreferences\": {\n    \"push\": \"true\",\n    \"email\": \"true\"\n  },\n  \"alertPreferences\": {\n    \"aqi_threshold\": \"50\",\n    \"traffic_alerts\": \"true\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/preferences",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "preferences"]
            }
          }
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Create Report",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "data",
                  "value": "{\"category\":\"Pothole\",\"description\":\"Large pothole on Main Street\"}",
                  "type": "text"
                },
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/reports",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reports"]
            }
          }
        },
        {
          "name": "Get Reports",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": {
              "raw": "{{baseUrl}}/api/reports?page=0&size=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reports"],
              "query": [
                {"key": "page", "value": "0"},
                {"key": "size", "value": "10"}
              ]
            }
          }
        },
        {
          "name": "Get Report Details",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": {
              "raw": "{{baseUrl}}/api/reports/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reports", ":id"],
              "variable": [{"key": "id", "value": ""}]
            }
          }
        },
        {
          "name": "Get Report Timeline",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{accessToken}}"}],
            "url": {
              "raw": "{{baseUrl}}/api/reports/:id/timeline",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reports", ":id", "timeline"],
              "variable": [{"key": "id", "value": ""}]
            }
          }
        }
      ]
    },
    {
      "name": "ML Services",
      "item": [
        {
          "name": "Get Alert Preference",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"age\": 65,\n  \"medical_flags\": [\"Asthma\"],\n  \"commute_patterns\": [\"Daily Commuter\"]\n}"
            },
            "url": {
              "raw": "{{mlServiceUrl}}/personalization/alert-preference",
              "host": ["{{mlServiceUrl}}"],
              "path": ["personalization", "alert-preference"]
            }
          }
        },
        {
          "name": "Get Route Recommendation",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"origin\": {\"lat\": 40.7128, \"lng\": -74.0060},\n  \"destination\": {\"lat\": 40.7589, \"lng\": -73.9851},\n  \"preferences\": {}\n}"
            },
            "url": {
              "raw": "{{mlServiceUrl}}/routing/recommend",
              "host": ["{{mlServiceUrl}}"],
              "path": ["routing", "recommend"]
            }
          }
        },
        {
          "name": "Get AQI Recommendation",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{mlServiceUrl}}/alerts/aqi-recommendation?lat=40.7128&lng=-74.0060",
              "host": ["{{mlServiceUrl}}"],
              "path": ["alerts", "aqi-recommendation"],
              "query": [
                {"key": "lat", "value": "40.7128"},
                {"key": "lng", "value": "-74.0060"}
              ]
            }
          }
        },
        {
          "name": "Classify Image",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"image_url\": \"https://example.com/image.jpg\"\n}"
            },
            "url": {
              "raw": "{{mlServiceUrl}}/reports/classify-image",
              "host": ["{{mlServiceUrl}}"],
              "path": ["reports", "classify-image"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "mlServiceUrl",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    }
  ]
}

